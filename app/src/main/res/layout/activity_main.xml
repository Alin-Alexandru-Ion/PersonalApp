<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iconUrl"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="Current weather icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regionBox"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tempDegree"
        android:layout_width="109dp"
        android:layout_height="41dp"
        android:fontFamily="@font/exo_semibold"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconUrl"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/locationBox"
        android:layout_width="313dp"
        android:layout_height="87dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/exo_semibold"
        android:textAlignment="center"
        android:textSize="54sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/regionBox"
        android:layout_width="287dp"
        android:layout_height="67dp"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationBox" />

</androidx.constraintlayout.widget.ConstraintLayout>